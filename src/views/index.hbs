<!-- SECCION DE LA PORTADA SOBRE NOSOTROS-->
<article class="row mb-5">
    <div class="col-12 col-lg-8 d-flex align-items-lg-center justify-content-center">
        <img class="img-fluid w-md-75 " src="images/portada.png" alt="portada">
    </div>
    <div class="col-12 col-lg-4 text-center">
        <h1 class="display-4 font-weight-bold text-primary">Sobre Nosotros</h1>
        <p>Pensando en las necesidades del cliente y en la posibilidad de que las compañías cuenten
            con <strong>Procesos Administrativos</strong> efectivos, rentables y oportunos,<strong> GH INTEGRAL
                S.A.S.</strong> les brinda la oportunidad, mediante los servicios de outsourcing en: Seguridad Social,
            Seguridad y Trabajo, Asesoría Contable, Auditoría en Gestión Humana, Selección de Personal y Asistencia
            Jurídica</p>
        <a class="btn btn-primary" href="/about-us">Saber más</a>
    </div>
</article>

<!-- SECCION DE SERVICIOS-->
<article class="services mt-4">
    <div class="container-fluid bg-primary py-3">
        <h1 class="text-center display-4 font-weight-bold text-white">Nuestros Servicios</h1>
        <div class="row text-center">

            {{#each services}}
            <article class="col-12 col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                <div class="card">
                    <div class=" service-img">
                        <img src="{{image}}" class="card-img-top" alt="{{title}}">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-uppercase">{{title}}
                        </h5>
                        <p class="card-text">{{introduction}}</p>
                        <a href="/service/{{_id}}" class="btn btn-primary">Saber más</a>
                    </div>
                </div>
            </article>
            {{/each}}

        </div>
    </div>
</article>

<!-- SECCION DEL BLOG-->
<section class="my-5">

    <h1 class="text-primary text-center display-4 font-weight-bold">
        <span class="h2">
            NOTICIAS DE INTERES
            DESDE NUESTRO BLOG
        </span>
    </h1>
    <article class="container font-weight-bold">

        <div id="carouselExampleCaptions" class="carousel mx-auto slide img-thumbnail justify-content-center w-75"
            data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="images/portada.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block text-dark">
                        <h3>Bienvenido a nuestra página web</h3>
                        {{!-- <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p> --}}
                    </div>
                </div>
                {{#each articles}}
                <div class="carousel-item">
                    <a href="/blog/article/{{_id}}"><img src="{{images}}" class="d-block w-100" alt="{{title}}"></a>
                    <div class="carousel-caption d-none d-md-block text-dark">
                        <a href="/blog/article/{{_id}}"> <span class="h3">{{title}}</span></a>
                        {{!-- <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p> --}}
                    </div>
                </div>
                {{/each}}

            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previo</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    </article>

</section>