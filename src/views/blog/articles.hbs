<!--BLOG-->
<section class="blog my-5 pt-5">
    <div class="container">
        <div class="row justify-content-center">
            {{#each articles}}
            <div class="col-md-6 col-lg-10 py-3 ">
                <div class="card">
                    {{!-- <img src="{{images}}" class="card-img-top" alt="..."> --}}
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{title}} <a href="/blog/edit/{{_id}}"><i class="fas fa-pencil-alt text-primary"></i></a>
                        </h4>
                        <p>{{description}}</p>
                        <form action="/blog/delete/{{_id}}?_method=DELETE" method="POST" class="d-flex justify-content-end">
                            <input type="hidden" name="__method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-md">Borrar</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>