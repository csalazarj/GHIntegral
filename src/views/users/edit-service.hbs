<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Editar Servicio</h3>
            </div>

            <div class="card-body">
                <img src="{{service.image}}" class="card-img-top w-50" alt="...">
                <form action="/users/edit-service/{{service._id}}?_method=PUT" method="POST"
                    enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Ingrese portada del Servicio</label>
                        <input type="file" class="form-control-file" name="img_file_service"
                            id="exampleFormControlFile1">
                    </div>

                    <div class="form-group">
                        <input type="text" name="title" class="form-control" value="{{service.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="introduction" placeholder="IntroducciÃ³n corta" rows="5"
                            class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" rows="20"></textarea>
                    </div>
                    <div class="form-group col-8">
                        <label for="inputState">Seleccione el link del Servicio: </label>
                        <select id="inputState" class="form-control" name="route">
                            <option>/asistencia-contable</option>
                            <option>/asistencia-juridica</option>
                            <option>/auditorias-sg-sst</option>
                            <option>/gestion-humana</option>
                            <option>/riesgo-psicosocial</option>
                            <option>/seguridad-vial</option>
                            <option>/seguridad-y-salud</option>
                            <option>/seleccion-personal</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Guardar Cambios</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>