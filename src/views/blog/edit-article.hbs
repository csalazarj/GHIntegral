<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Editar Articulo</h3>
            </div>

            <div class="card-body">
                <img src="{{article.images}}" class="card-img-top" alt="...">
                <form action="/blog/edit/{{article._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Ingrese portada del Articulo</label>
                        <input type="file" class="form-control-file" name="img_file" id="exampleFormControlFile1">
                    </div>

                    <div class="form-group">
                        <input type="text" name="title" class="form-control" value="{{article.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" rows="20">{{article.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>