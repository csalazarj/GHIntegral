<!--BLOG-->

<div id="blog">
    <div class="row justify-content-center">
        {{#each articles}}
        <div class="col-md-6 col-lg-10 py-3 ">
            <div class="card">
                {{!-- <img src="{{images}}" class="card-img-top" alt="..."> --}}
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}}
                        {{#if user}}
                        <a href="/blog/edit/{{_id}}"><i class="fas fa-pencil-alt text-primary"></i></a>
                        {{/if}}
                    </h4>
                    <p>{{description}}</p>
                    {{#if user}}
                    <form action="/blog/delete/{{_id}}?_method=DELETE" method="POST" class="d-flex justify-content-end">
                        <input type="hidden" name="__method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-md">Borrar</button>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>