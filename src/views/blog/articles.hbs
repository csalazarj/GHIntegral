<div class="row">
    <div class="col-12 text-center bg-primary text-white py-4">
        <h1 class="h1">BLOG</h1>
    </div>
</div>

<div class="row justify-content-center">
    {{#each articles}}
    <div class="col-lg-3 py-3 d-flex align-items-stretch ">
        <div class="card">
            <img src="{{images}}" class="card-img-top" alt="imagen">
            <div class="card-body">
                {{#if ../user}}
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}}
                    <a href="/blog/edit/{{_id}}"><i class="fas fa-pencil-alt text-primary"></i></a>
                </h4>

                <form action="/blog/delete/{{_id}}?_method=DELETE" method="POST" class="d-flex justify-content-center">
                    <input type="hidden" name="__method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-md">Borrar</button>
                </form>
                {{/if}}
                <form action="/blog/article/{{_id}}" method="GET"
                    class="d-flex py-2 justify-content-center align-content-center">
                    <button type="submit" class="btn btn-info btn-md">Sabes m√°s</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>