<!-- SECCION DE SERVICIOS-->

<article class="services mt-4">
    <div class="container-fluid bg-primary py-3">
        <h1 class="text-center display-4 font-weight-bold text-white">Nuestros Servicios</h1>
        <div class="row text-center">

            {{#each services}}
            <article class="col-12 col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                <div class="card ">
                    <img src="{{image}}" class="card-img-top" alt="{{title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}
                            <a href="/users/edit-service/{{_id}}"><i class="fas fa-pencil-alt text-primary"></i></a>
                        </h5>
                        <p class="card-text">{{introduction}}</p>
                        <a href="/service/{{_id}}" class="btn btn-primary">Saber más</a>


                        <form action="/users/delete-service/{{_id}}?_method=DELETE" method="POST"
                            class="d-flex justify-content-center pt-2">
                            <input type="hidden" name="__method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-md">Borrar</button>
                        </form>
                    </div>
                </div>
            </article>
            {{/each}}

        </div>
    </div>
</article>


