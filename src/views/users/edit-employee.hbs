<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Editar Empleado / Secci√≥n Sobre Nosotros</h3>
                <div class="card-body">
                    <img src="{{employee.image}}" class="card-img-top w-50" alt="...">
                    <form action="/users/edit-employee/{{employee._id}}?_method=PUT" method="POST"
                        enctype="multipart/form-data">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Nombre"
                                value="{{employee.name}}" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlFile1">Ingrese imagen de perfil</label>
                            <input type="file" class="form-control-file" name="img_file_employee"
                                id="exampleFormControlFile1" value="{{employee.image}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="position" class="form-control" placeholder="Cargo en la empresa"
                                value="{{employee.position}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="facebook" class="form-control"
                                placeholder="Ingrese URL de Facebook" value="{{employee.facebook}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="twitter" class="form-control" placeholder="Ingrese URL de Twitter"
                                value="{{employee.twitter}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="instagram" class="form-control"
                                placeholder="Ingrese URL de Instagram" value="{{employee.instagram}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="linkedin" class="form-control"
                                placeholder="Ingrese URL de LinkedIn" value="{{employee.linkedin}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>